<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-tables-user-and-user_role" author="Timur Ismoilov">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="date_updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="user_company_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_users_user_company" references="user_company(id)"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="is_active" type="BOOLEAN" defaultValue="true"/>
        </createTable>

        <createTable tableName="user_role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_role_user" references="users(id)"/>
            </column>
            <column name="role" type="VARCHAR(50) CHECK (role IN ('ADMIN', 'USER', 'GUEST'))">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
